<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="평점체크"
            android:textSize="30sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/today"
            />


    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:paddingTop="25dp">
        <TableRow>
            <TextView android:layout_weight="1"
                android:textSize="20sp"
                />
            <TextView android:text="만족(2)"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView android:text="보통(1)"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView android:text="불만(0)"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </TableRow>
        <TableRow>
            <TextView android:text="1. 맛"
                android:layout_weight="1"
                android:textSize="20sp"
                />
            <CheckBox android:id="@+id/chk00"
                android:layout_weight="1"
                />
            <CheckBox android:id="@+id/chk01"
                android:layout_weight="1"
                />
            <CheckBox android:id="@+id/chk02"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow>
            <TextView android:text="2. 양"
                android:layout_weight="1"
                android:textSize="20sp"
                />
            <CheckBox android:id="@+id/chk10"
                android:layout_weight="1"/>
            <CheckBox android:id="@+id/chk11"
                android:layout_weight="1"
                />
            <CheckBox android:id="@+id/chk12"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow>
            <TextView android:text="3. 가격"
                android:layout_weight="1"
                android:textSize="20sp"/>
            <CheckBox android:id="@+id/chk20"
                android:layout_weight="1"
                />
            <CheckBox android:id="@+id/chk21"
                android:layout_weight="1"
                />
            <CheckBox android:id="@+id/chk22"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow>
            <TextView android:text="4. 신선도"
                android:layout_weight="1"
                android:textSize="20sp" />
            <CheckBox android:id="@+id/chk30"
                android:layout_weight="1"
                />
            <CheckBox android:id="@+id/chk31"
                android:layout_weight="1"
                />
            <CheckBox android:id="@+id/chk32"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow>
            <TextView android:text="5. 서비스"
                android:layout_weight="1"
                android:textSize="20sp"/>
            <CheckBox android:id="@+id/chk40"
                android:layout_weight="1"
                />
            <CheckBox android:id="@+id/chk41"
                android:layout_weight="1"
                />
            <CheckBox android:id="@+id/chk42"
                android:layout_weight="1"
                />
        </TableRow>

    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="평점계산"
            android:onClick="calcu"
            android:id="@+id/calcuBtn"
            android:gravity="center"
            android:background="#695343"
            />


    </LinearLayout>


</LinearLayout>
